@{
    ViewData["Title"] = "Country";
}
@model LOC_CountryModel
<div class="row">
    <div class="col-md-12">
        <form method="post" asp-controller="LOC_Country" asp-action="Save" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.CountryID) @*doubt*@
            @Html.HiddenFor(x => x.PhotoPath)
            <div class="form-group">
                <label>Country Name</label>
                <input type="text" placeholder="Enter Country Name" asp-for="CountryName" class="form-control" id="con_name"/>
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Country Code</label>
                <input type="text" placeholder="Enter Country Code" asp-for="CountryCode" class="form-control" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Created</label>
                <input type="date" asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Modified</label>
                <input type="date" asp-for="ModificationDate" class="form-control" />
                <span asp-validation-for="ModificationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Upload File</label>
                <input type="file" asp-for="File" placeholder="Upload your file" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <button asp-controller="LOC_Country" asp-action="Back" class="btn btn-danger">Cancel</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}